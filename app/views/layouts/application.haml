    %meta{:content => "Friend Over Food", :name => "twitter:title"}
    %meta{:content => "Friend Over Food", :name => "twitter:description"}
    %meta{:content => "Friend Over Food", :name => "description"}
    %meta{:content => "", :name => "keywords"}
